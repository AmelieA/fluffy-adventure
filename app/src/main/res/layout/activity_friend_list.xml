<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fluffyadventure.view.FriendListActivity"
    android:background="@drawable/wood_texture">

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnInBox"
        android:text="@string/btnInBox_text"
        style="@style/btnStyleOrangePetit"
        android:layout_gravity="left"
        android:layout_margin="5dp"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnNew"
        android:text="@string/btnNewText"
        style="@style/btnStyleOrangePetit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"/>
    <ListView
        android:id="@+id/FriendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/BtnInBox"/>

</RelativeLayout>
