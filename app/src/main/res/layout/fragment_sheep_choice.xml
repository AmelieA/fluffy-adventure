<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.fluffyadventure.view.SheepChoice">

    <!-- Backgroud -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/Background_nid"
        android:src="@drawable/weadow" />

    <TextView android:text="@string/choice_explaination"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/choice_explaination2"
        style="@style/information" />

    <LinearLayout
        android:id="@+id/buttonOK2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_valider"
            android:id="@+id/OkBtn"
            style="@style/btnStyleOrangePetit"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_choix"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonOK2"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="100dp"
            android:gravity="center">

            <RadioButton
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/sheep1"
                android:layout_width="wrap_content"
                android:checked="true"
                android:id="@+id/sheep1">
            </RadioButton>

            <RadioButton
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/sheep2"
                android:layout_width="wrap_content"
                android:checked="false"
                android:id="@+id/sheep2">
            </RadioButton>

            <RadioButton
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/sheep3"
                android:layout_width="wrap_content"
                android:checked="false"
                android:id="@+id/sheep3">
            </RadioButton>

            <RadioButton
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/sheep4"
                android:layout_width="wrap_content"
                android:checked="false"
                android:id="@+id/sheep4">
            </RadioButton>

            <RadioButton
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/sheep5"
                android:layout_width="wrap_content"
                android:checked="false"
                android:id="@+id/sheep5">
            </RadioButton>

        </RadioGroup>
    </ScrollView>

    <!-- Petites fleches -->
    <LinearLayout
        android:id="@+id/kikoo"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="2"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:layout_gravity="left"
                android:src="@drawable/arrowright"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>